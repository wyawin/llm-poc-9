{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Run Backend",
      "program": "${workspaceFolder}/server/index.js",
      "runtimeExecutable": "nodemon",
      "console": "integratedTerminal"
    },
    {
      "type": "node-terminal",
      "request": "launch",
      "name": "Run Frontend",
      "command": "npm run client"
    },
    {
        "type": "chrome",
        "request": "launch",
        "name": "Run Chrome",
        "url": "http://localhost:5173",
        "webRoot": "${workspaceFolder}"
    }
  ],
  "compounds": [
    {
      "name": "Run Backend & Frontend",
      "configurations": ["Run Backend", "Run Frontend", "Run Chrome"],
      "stopAll": true
    }
  ]
}
